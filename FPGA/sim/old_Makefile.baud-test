# Makefile for ghdl fast sim

GHDL=ghdl
STD=--std=08
WAVE=wave.ghw
TB=u_baudgen_tb


# compile
SRC_RTL=../rtl/u_baudgen.vhd


SRC_TB=u_baudgen_tb.vhd

all: run

analyze:
	$(GHDL) -a $(STD) $(SRC_RTL) $(SRC_TB)

elab: analyze
	$(GHDL) -e $(STD) $(TB)

run: elab
	$(GHDL) -r $(STD) $(TB) --wave=$(WAVE)

view:
	gtkwave $(WAVE)

clean:
	$(GHDL) --clean
	rm -f $(WAVE)

